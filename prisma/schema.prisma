generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_UNPOOLED")
}

model game {
  roomId           String  @id @default(cuid())
  players          Int[]
  board            String // Store board state as JSON
  currentPlayer    String
  kingCheckOrMoved String
  rookMoved        String
  eliminatedPiece  String
  isKingInCheck    Boolean @default(false)
  isCheckmate      Boolean @default(false)
  canPawnPromote   Boolean @default(false)
  whiteTime        Int     @default(600) // 10 minutes in seconds
  blackTime        Int     @default(600) // 10 minutes in seconds
  lastMove         String? // Store last move as JSON
}

